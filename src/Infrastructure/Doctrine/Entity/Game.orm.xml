<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        https://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Domain\Entity\Game">
        <id name="id" type="uuid" column="id">
        </id>
        <field name="name" column="name" type="string" length="255" nullable="false" unique="true"/>
        <many-to-one field="homeTeam" target-entity="App\Domain\Entity\Team" inversed-by="homeGames">
            <join-column name="home_team_id" referenced-column-name="id" />
        </many-to-one>
        <many-to-one field="awayTeam" target-entity="App\Domain\Entity\Team" inversed-by="awayGames">
            <join-column name="away_team_id" referenced-column-name="id" />
        </many-to-one>
    </entity>
</doctrine-mapping>
